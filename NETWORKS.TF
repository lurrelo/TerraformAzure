resource "azurerm_resource_group" "terraform_rg" {
  name = "${var.resource_group_name}"
  location = "${var.location}"
}
resource "azurerm_virtual_network" "demo_vnet" {
  name = "DevOpsDemo-VNet"
  address_space = ["${var.vnet_cidr}"]  location = "${var.location}"
  resource_group_name   = "${azurerm_resource_group.terraform_rg.name}"

  tags {
group = "TerraformAzureDemo"
  }
}
resource "azurerm_subnet" "demo_subnet_1" {
  name = "DevOpsDemo-Subnet-1"
  address_prefix = "${var.subnet1_cidr}"
  virtual_network_name = "${azurerm_virtual_network.demo_vnet.name}"
  resource_group_name = "${azurerm_resource_group.terraform_rg.name}"
}

resource "azurerm_subnet" "demo_subnet_2" {
  name = "DevOpsDemo-Subnet-2"
  address_prefix = "${var.subnet2_cidr}"
  virtual_network_name = "${azurerm_virtual_network.demo_vnet.name}"
  resource_group_name = "${azurerm_resource_group.terraform_rg.name}"
}
